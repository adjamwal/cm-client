<?xml version="1.0" encoding="utf-8" standalone="no"?>
<installer-gui-script minSpecVersion="1">
    <options rootVolumeOnly="true" customize="never" hostArchitectures="x86_64,arm64" require-scripts="true" />
    <title>Cisco Secure Client Cloud Management for Mac</title>
    <product id="com.cisco.secureclient.cloudmanagement"/>
    <organization>com.cisco.secureclient.cloudmanagement</organization>

    <ram min-gb="2" />

    <!-- Define documents displayed at various steps -->
    <welcome    file="welcome.rtf"    mime-type="text/rtf" />
    <license    file="license.rtf"    mime-type="text/rtf" />

    <!-- Since this is a regular install we can forgo the huge choice list -->
    <choices-outline>
        <line choice="choice1"/>
    </choices-outline>

    <!-- Define each choice above -->
    <choice id="choice1" visible="false" selected="true">
        <pkg-ref id="com.cisco.secureclient.cloudmanagement.service"/>
    </choice>

    <!-- List all component packages -->
    <pkg-ref id="com.cisco.secureclient.cloudmanagement.service" auth="root">cisco-secure-client-macos-cloudmanagement.pkg</pkg-ref>
</installer-gui-script> 